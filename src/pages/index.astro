  // Selecciona la barra de navegación por su ID
  const navbar: HTMLElement | null = document.getElementById('navbar');

  // Verifica que la navbar no sea nula antes de añadir el listener
  if (navbar) {
    // Añade un listener para el evento de scroll de la ventana
    window.addEventListener('scroll', () => {
      // Comprueba la posición de desplazamiento vertical
      if (window.scrollY > 50) {
        // Si se ha desplazado más de 50 píxeles, añade clases para cambiar el fondo y el desenfoque
        navbar.classList.add('bg-white/80', 'backdrop-blur-md');
        navbar.classList.remove('bg-white');
      } else {
        // Si está por debajo de 50 píxeles, restaura el fondo original
        navbar.classList.remove('bg-white/80', 'backdrop-blur-md');
        navbar.classList.add('bg-white');
      }
    });
  } else {
    console.warn('Navbar no encontrada');
  }
});
			</script>
		
	



